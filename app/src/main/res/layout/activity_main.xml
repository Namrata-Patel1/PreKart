<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.androidl.prekart.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginTop="100dp"><!--android:lyout_marginTop defines the margin from the top-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="289dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true" >

        <info.hoang8f.widget.FButton
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:buttonColor="@color/btnSignUp"
            app:shadowEnabled="true"
            app:cornerRadius="10dp"
            app:shadowHeight="5dp"
            />
        <info.hoang8f.widget.FButton
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:buttonColor="@color/btnSignUpActive"
            app:shadowEnabled="true"
            app:cornerRadius="10dp"
            app:shadowHeight="5dp"
            />
    </LinearLayout>

</RelativeLayout>
